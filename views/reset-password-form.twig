{% extends "layout.twig" %}
{% block body %}
	<div class="container mt-5">
		<h1>Reset your Password</h1>
		<form action="" method="post">
			{% if errorForm %}
				<ul class="errorform">
					{% for error in errorForm %}
						{% if error.password %}
							<li class="error">{{ error.password.message }}</li>
						{% endif %}
						{% if error.passwordConfirm %}
							<li class="error">{{ error.passwordConfirm.message }}</li>
						{% endif %}
					{% endfor %}
				</ul>
			{% endif %}
			<!-- Password input -->
			<div class="form-outline mb-4">
				<input type="password" id="form2Example2" name="password" value="password" class="form-control"/>
				<label class="form-label" for="form2Example2">Password</label>
			</div>

			<div class="form-outline mb-4">
				<input type="password" id="form2Example2" name="passwordConfirm" value="password" class="form-control"/>
				<label class="form-label" for="form2Example2">Repeat Password :
				</label>
			</div>
			<p class="text-center">Do you have a account ?
				<a href="/users/sign-up">please click here to signup !
				</a>
			</p>
			<!-- Submit button -->
			<button type="submit" class="btn btn-primary btn-block mb-4">Reset Password</button>
		</form>
	</div>

{% endblock %}
