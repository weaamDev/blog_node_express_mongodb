{% block body %}
<div class="container mt-5 mb-2">
    <h1>Login</h1>
    <form action="" method="POST"  class="row g-3 needs-validation" novalidate>
        {# {% if errorForm %}
        <ul class="errorform">  
            {% for error in errorForm %}
                {% if error.email %}
                <li class="error">{{ error.email.message }}</li>
                {% endif %}
                {% if error.password %}
                <li class="error">{{ error.password.message }}</li>
                {% endif %}
            {% endfor %}
        </ul>
        {% endif %} #}
        
        <p class="text-center">You don't have an account ? <a href="/users/sign-up">please click here to signup !</a></p>
        <div class="form-outline mb-3">
            <input type="email" name="email" class="form-control" require>
            <label class="form-label" for="email">email: </label>
        </div>
        {% for error in errorForm %}
            {% if error.email %}
                <div class="error mb-3">{{ error.email.message }}</div>
            {% endif %}
        {% endfor %}
        <div class="form-outline mb-3">
            <input type="password" name="password" class="form-control" id="password" require>
            <label class="form-label" for="password">Password</label>
        </div>
        {% for error in errorForm %}
            {% if error.password %}
            <div class="error mb-3">{{ error.password.message }}</div>
            {% endif %}
        {% endfor %}
        <p class="text-center">Do you forgot password ? <a href="/users/forgot-password">click here</a></p>
        <button type="submit" class="btn btn-success mt-3">login</button>
    </form>
</div>
   
{% endblock %}