{% extends "layout.twig" %}

{% block body %}
	<div class="container mt-5">
		<h1 class="text-center mt-3 mb-3">Add your category!</h1>
		{% if errorForm %}
			<ul class="errors">
				{% for error in errorForm %}
					{% if error.title %}
						<li class="error">{{error.title.message}}</li>
					{% endif %}
					{% if error.description %}
						<li class="error">
							{{error.description.message}}</li>
					{% endif %}
				{% endfor %}
			</ul>
		{% endif %}
		<form action="/category/add-category" enctype="multipart/form-data" method="POST" class="mt-3">
			<div class="form-outline mb-3">
				<input type="text" class="form-control" name="title">
				<label class="form-label" for="title">Title :
				</label>
			</div>
			<div class="form-outline mb-3">
				<input type="file" class="form-control" name="image" placeholder="select Image">
			</div>
			<div class="form-group mb-3">
				<textarea name="description" id="description" class="form-control" cols="30" rows="10" placeholder="description"></textarea>
			</div>
			<button type="submit" class="btn btn-success mt-3">Add category</button>
		</form>
	</div>

{% endblock %}
{% block javascript %}
	<script src="https://cdn.ckeditor.com/ckeditor5/39.0.2/classic/ckeditor.js"></script>
	<script>
		ClassicEditor.create(document.querySelector('#description')).catch(error => {
console.error(error);
});
	</script>
{% endblock %}
