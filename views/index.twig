	{% if categories %}
		<section class="container content-top-first" id="content-top-first">
			<div class="category-content swiper">
				<div class="view-header">
					<h2 class="home-block-title mx-2">Catégories à la lune</h2>
				</div>
				<a class="all-categ" href="/category/list-category">List Category<i class="fa fa-angle-right"></i>
				</a>
				<div class="swiper category-slider">
					<div class="slide-container swiper-category view-content swiper-first ">
						<div class="card-warpper swiper-wrapper container">
							{% for category in categories %}
								<div class="card swiper-slide">
									<a href="/category/{{category._id}}"><img class="img-categ mb-2" src="{{category.image}}" alt="{{category.image}}"></a>
									<h6 class="text-center mb-2">{{category.title}}</h6>
									<a href="/category/{{category._id}}" class="btn btn-primary">En savoir plus</a>
								</div>
							{% endfor %}
						</div>
					</div>
					<div class="swiper-button-next swiper-navBtn"></div>
					<div class="swiper-button-prev swiper-navBtn"></div>
				</div>
			</div>
		</section>
	{% endif %}

	{% if articles %}
		<div class="latest-products">
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<div class="section-heading">
							<h2>Latest Products</h2>
							<a href="/list-article">view all products
